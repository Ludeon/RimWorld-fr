<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>WasEnslaved</defName>
    <durationDays>12</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>was enslaved</label>
        <description>They kept me as a slave. They forced me to suffer!</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SleptInRoomWithSlave</defName>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>shared room with slave</label>
        <description>I had to sleep in the same room as a slave.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>ConnectedTreeDied</defName>
    <durationDays>10</durationDays>
    <stages>
      <li>
        <label>Gauranlen death</label>
        <description>My tree... its calming presence became pure pain, then went silent. Its suffering echoes in my mind...</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>RelicsCollected</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>15</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>all relics collected</label>
        <description>We found all of our sacred relics!</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>BiosculpterPleasure</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>12</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>biosculpter pleasure cycle</label>
        <description>Every part of me is somehow better at feeling good.</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>DryadDied</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <durationDays>6</durationDays>
    <stackLimit>4</stackLimit>
    <stages>
      <li>
        <label>dryad died</label>
        <description>My tree's dryad is gone forever. You shall be missed, little one.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>