<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <QuestScriptDef>
    <defName>RelicHunt</defName>
    <rootSelectionWeight>0</rootSelectionWeight>
    <isRootSpecial>true</isRootSpecial>
    <rootMinPoints>300</rootMinPoints>
    <defaultChallengeRating>3</defaultChallengeRating>
    <epic>true</epic>
    <questNameRules>
      <rulesStrings>

        <!-- quest name -->
        <li>questName->The [hunt] for the [item]</li>
        <li>questName->The [item] of [ideo_name]</li>
        <li>questName->The [itemAdj] [item]</li>

        <!-- pieces -->
        <li>hunt->hunt</li>
        <li>hunt->search</li>
        <li>hunt->quest</li>

        <li>item(p=4)->[relic_name]</li>
        <li>item->relic</li>
        <li>item->artifact</li>

        <li>itemAdj->ancient</li>
        <li>itemAdj->revered</li>
        <li>itemAdj->venerated</li>

      </rulesStrings>
    </questNameRules>
    <questDescriptionRules>
      <rulesStrings>
      
        <!-- description -->
        <li>questDescription->You've learned that a relic of [ideo_name] is nearby.\n\nThe [relic_name] is an ancient object venerated by all [ideo_memberNamePlural]. If you could collect it, you could build a great reliquary to make [ideo_memberNamePlural] happy, attract wealthy pilgrims, and bring more people to [ideo_name].</li>

      </rulesStrings>
    </questDescriptionRules>
    <root Class="QuestNode_Root_RelicHunt" />
  </QuestScriptDef>

</Defs>