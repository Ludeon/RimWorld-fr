      <li>Map_PlayerHome</li>
    </targetTags>
    <workerClass>IncidentWorker_InsectJelly</workerClass>
    <baseChance>0</baseChance> <!-- created by ritual effect worker -->
    <letterLabel>Insect jelly</letterLabel>
    <letterText>Giant insects have tunneled up from underneath and deposited some surplus insect jelly on the surface.</letterText>
    <letterDef>PositiveEvent</letterDef>
  </IncidentDef>

  <IncidentDef>
    <defName>WanderersSkylantern</defName>
    <label>Wanderers</label>
    <category>Special</category>
